<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/_88762487_junk_food"
    tools:context="com.example.mohamed.tchololbane.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/logo"
            android:layout_width="200dp"
            android:layout_height="200dp" />

        <TextView
            android:gravity="center"
            android:id="@+id/txtSlogan"
            android:text="@string/slogan"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:id="@+id/signUp"
            android:textColor="@android:color/white"
            android:layout_weight="1"
            android:layout_width="50dp"
            android:layout_margin="8dp"
            android:layout_height="40dp"
            app:cardBackgroundColor="@color/signUp"
            app:shadowColor="@android:color/black"
            app:buttonColor="@color/signUp"
            app:shadowEnabled="true"
            app:shadowHeight="5dp"
            app:cornerRadius="25dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inscription"
                    android:textColor="#ffff"
                    android:layout_centerInParent="true"
                    android:textSize="18sp"/>

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/signIn"
            android:text="Connexion"
            android:textColor="@android:color/white"
            android:layout_weight="1"
            android:layout_width="50dp"
            android:layout_margin="8dp"
            android:layout_height="40dp"
            app:cornerRadius="25dp"
            app:shadowColor="@android:color/black"
            app:cardBackgroundColor="@color/signIn"
            app:shadowEnabled="true"
            app:shadowHeight="5dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Connexion"
                    android:textColor="#ffff"
                    android:layout_centerInParent="true"
                    android:textSize="18sp"/>

            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>


</RelativeLayout>
